<div class="col-md-8">
  <div class='thumbnail'>
    <%= image_tag @image.file.url, class: "img-rounded" %>
    <div class="caption">
      <h3><%= t @image.title %></h3>
      <p>
        <%= @image.tag_list %>
        <%= link_to t('.add_tags'),
                    edit_image_path(@image),
                    class: 'btn btn-primary btn-xs' %>
      </p>
    </div>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back'),
              images_path, :class => 'btn' %>
</div>