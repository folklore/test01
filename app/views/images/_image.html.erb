<div class="col-md-3">
  <div class='thumbnail'>
    <%= link_to image do %>
      <%= image_tag image.file.url, class: "img-rounded" %>
    <% end %>
    <div class="caption">
      <h3><%= image.title %></h3>
      <p>
        <%= image.tag_list %>
        <%= link_to t('.add_tags'),
                    edit_image_path(image),
                    class: 'btn btn-primary btn-xs' %>
      </p>
    </div>
  </div>
</div>