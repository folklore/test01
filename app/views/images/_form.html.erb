<%= simple_form_for @image, html: { role: "form" } do |f| %>
  <div class="form-group">
    <%= f.input :title %>
  </div>
  <div class="form-group">
    <%= f.input :tag_list %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t('.submit'), :class => 'btn btn-primary' %>
    <%= link_to t('.back'),
                images_path, :class => 'btn' %>
  </div>
<% end %>